@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Velkommen til Hillerød Sejlklub</h1>

</div>

<div id="carouselExampleIndicators" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner" style="max-height: 400px; border-radius: 10px;">
        <div class="carousel-item active">
            <img src="/images/Sejlklub.jpg" class="d-block w-100" alt="Stemning fra havnen" style="object-fit: cover; height: 400px;">
        </div>
        <div class="carousel-item">
            <img src="/images/Sejlklub4.jpg" class="d-block w-100" alt="Kapsejlads" style="object-fit: cover; height: 400px;">
        </div>
        <div class="carousel-item">
            <img src="/images/Sejlklub5.jpg" class="d-block w-100" alt="Solnedgang over vandet" style="object-fit: cover; height: 400px;">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Se vores både</h3>
        <p>
            Se vores udvalg af motorbåde, joller og sejlbåde, som er klar til brug for alle klubbens medlemmer.
        </p>
        <a class="btn btn-primary" asp-page="/ShowAllBoats">Se alle vores både</a>
    </div>
    <div class="col-md-4">
        <h3>Kommende Events</h3>
        <p>
            Få overblikket over sæsonens kapsejladser, klubaftener og sociale arrangementer.
        </p>
        <a class="btn btn-primary" asp-page="/ShowAllEvents">Se kommende events</a>
    </div>
    <div class="col-md-4">
        <h3>Bliv Medlem</h3>
        <p>
            Vi har plads til både nye og øvede sejlere. Bliv en del af fællesskabet i dag.
        </p>
        <a class="btn btn-primary" asp-page="/BecomeMember">Bliv medlem</a>
    </div>
</div>